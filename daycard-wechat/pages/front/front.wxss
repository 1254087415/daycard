/* pages/front/front.wxss */
@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

/* 轮播图样式 */
.front-swiper {
  width: 100%;
  position: absolute;
  top: 20%;
  height: 305rpx;
  margin-top: 10rpx;
}

.front-swiper .front-swiper-item .item-view {
  background-color: #F8F8FF;
  height: 285rpx;
  width: 95%;
  margin-left: auto;
  margin-right: auto;
  border-radius: 14rpx;
}

.front-swiper .front-swiper-item .swiper-imgae {
  width: 100%;
  height: 300rpx;
  border-radius: 14rpx;
}

