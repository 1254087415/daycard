.cu-bar.tabbar-title {

}

.cu-bar.tabbar.bg-white.related {
  background: #fff;
  display: flex;
  height: 200rpx;
  border-radius: 14rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.related .action {
  flex: 1;
  text-align: center;
  align-content: center;
